<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/_4sdp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_7ssp"
        app:cardCornerRadius="@dimen/_10ssp"
        android:backgroundTint="@color/item_color"
        android:padding="6dp"
        >

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_6sdp"
        android:orientation="vertical"
            android:background="@color/item_color"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tvWord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_14sdp"
                    android:text="@string/word_noun"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    />

                <ImageView
                    android:id="@+id/sound"
                    android:layout_width="@dimen/_17sdp"
                    android:layout_height="@dimen/_17sdp"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:src="@drawable/sound"
                    />


            </RelativeLayout>


    <TextView
        android:id="@+id/tvMeaing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sdp"
        android:text="@string/meaningss"
        android:textStyle="bold"
        android:textColor="@color/sky"
        />

    <TextView
        android:id="@+id/tvExample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_11sdp"
        android:text="@string/here_is_example_with_the_word"
        android:textStyle="normal"
        />
</LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>